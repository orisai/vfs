{
	"name": "orisai/vfs",
	"description": "Emulate file system with plain PHP",
	"keywords": [
		"filesystem",
		"filesystem-library",
		"orisai",
		"vfs"
	],
	"type": "library",
	"license": "MIT",
	"homepage": "https://github.com/orisai/vfs",
	"authors": [
		{
			"name": "Michael Donat",
			"homepage": "https://github.com/michael-donat"
		},
		{
			"name": "Marek Barto≈°",
			"homepage": "https://github.com/mabar"
		}
	],
	"require": {
		"php": "7.4 - 8.4",
		"orisai/exceptions": "^1.0.0",
		"orisai/stream-wrapper-contracts": "^1.0.0",
		"symfony/polyfill-php80": "^1.26"
	},
	"require-dev": {
		"brianium/paratest": "^6.3.0",
		"infection/infection": "^0.26.0|^0.27.0|^0.28.0|^0.29.0",
		"orisai/coding-standard": "^3.0.0",
		"phpstan/extension-installer": "^1.0.0",
		"phpstan/phpstan": "^1.0.0",
		"phpstan/phpstan-deprecation-rules": "^1.0.0",
		"phpstan/phpstan-phpunit": "^1.0.0",
		"phpstan/phpstan-strict-rules": "^1.0.0",
		"phpunit/phpunit": "^9.5.0",
		"staabm/annotate-pull-request-from-checkstyle": "^1.7.0"
	},
	"autoload": {
		"psr-4": {
			"Orisai\\VFS\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Orisai\\VFS\\": "tests"
		}
	},
	"suggest": {
		"ext-posix": "For permissions support - GID and UID"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"infection/extension-installer": true,
			"phpstan/extension-installer": true
		}
	}
}
